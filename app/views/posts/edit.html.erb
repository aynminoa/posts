<%= form_with(model: @post, local: true) do |form| %>

<% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="post-entry">
    <%= form.text_field :content %>
  </div>
  <div class="post-btn">
    <%= form.submit "投稿を更新"%>
  </div>
<% end %>